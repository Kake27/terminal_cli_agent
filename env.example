# Terminal Coding Agent Environment Configuration

# LLM Provider Configuration
# Set your API keys here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# E2B Configuration (for enhanced sandboxing)
E2B_API_KEY=your_e2b_api_key_here

# Daytona Configuration (for cloud sandboxing)
DAYTONA_API_KEY=your_daytona_api_key_here

# Execution Mode Configuration
# Options: auto, sandbox, docker, e2b, daytona, multi
EXECUTION_MODE=auto

# Resource Limits
MAX_EXECUTION_TIME=30
MAX_MEMORY_USAGE=512
SANDBOX_TIMEOUT=60

# Security Configuration
ENABLE_SECURITY_SCANNING=true
ENABLE_CODE_ANALYSIS=true
SECURITY_SCAN_TIMEOUT=10
SECURITY_POLICY_FILE=security_policy.json
SECURITY_LEVEL=moderate

# UI Configuration
ENABLE_SYNTAX_HIGHLIGHTING=true
ENABLE_AUTOCOMPLETE=true
HISTORY_SIZE=1000

# Project Configuration
BACKUP_ENABLED=true
AUTO_SAVE=true
MAX_CONVERSATION_HISTORY=50

# Multi-language Support
ENABLE_MULTI_LANGUAGE=true
DEFAULT_LANGUAGE=python

# Docker Configuration (if using Docker executor)
DOCKER_IMAGE=python:3.11-slim
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=.coding_agent.log
ENABLE_EXECUTION_LOGGING=true

# Development Configuration
DEBUG_MODE=false
VERBOSE_OUTPUT=false
ENABLE_PROFILING=false